<Page x:Class="Questionnaire.Views.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Questionnaire.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        
        

        <StackPanel Orientation="Vertical" >
            <Label Content="Questions"></Label>
            <StackPanel Height="60" VerticalAlignment="Top" Orientation="Horizontal">

                <TextBlock Text="Quelle est la capitale de la france ?"></TextBlock>
                <TextBlock Text="Paris"></TextBlock>
            </StackPanel>

        </StackPanel>
        
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <Label Content="Question" Height="30"></Label>
                <TextBox Height="30" VerticalContentAlignment="Center"
                         Text="Quelle est la capitale de la france ?"></TextBox>
                <Label Content="Réponses possibles" Height="30"></Label>
                <TextBox Height="30" VerticalContentAlignment="Center"
                         Text="Montpellier"></TextBox>
                <TextBox Height="30" VerticalContentAlignment="Center"
                        Text="Lyon"></TextBox>
                <TextBox Height="30" VerticalContentAlignment="Center"
                         Text="Nantes"></TextBox>
                <TextBox Height="30" VerticalContentAlignment="Center"
                        Text="Paris"></TextBox>
                <Label Content="Bonne réponse" Height="30"></Label>
                <TextBox Height="30" VerticalContentAlignment="Center"
                    Text="Paris"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Width="120" Height="40" Margin="0,0,20,0">
                    <TextBlock Text="Ajouter question"></TextBlock>
                </Button>
                <Button Width="120" Height="40" >
                    <TextBlock Text="Supprimer question"></TextBlock>
                </Button>
            </StackPanel>
        </Grid>

    </Grid>

</Page>
