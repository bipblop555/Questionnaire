<Page x:Class="Questionnaire.Views.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Questionnaire.Views"
      xmlns:viewmodels="clr-namespace:Questionnaire.ViewModels"
      xmlns:models="clr-namespace:Questionnaire.Core.Models;assembly=Questionnaire.Core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=viewmodels:Page2ViewModel}"
      Title="Page2">

    <Page.Resources>

        
    </Page.Resources>
        
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox 
            x:Name="QuestionListBox"
            ItemsSource="{Binding Questions}"
            SelectedItem="{Binding SelectedQuestion}"
            
            Grid.Column="0"
            >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" FontWeight="Bold" Text="{Binding Contenu}" Width="300"></TextBlock>
                            <TextBlock Grid.Column="1" Text="{Binding BonneReponse.Contenu}" TextWrapping="Wrap"></TextBlock>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            
        </ListBox>

        <StackPanel Grid.Column="1">
                <Label Content="Question" Height="30"></Label>
                <TextBox Height="30" VerticalContentAlignment="Center"
                         Text="{Binding SelectedQuestion.Contenu, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <Label Content="Réponses possibles" Height="30"></Label>
                <TextBox Height="30" VerticalContentAlignment="Center" Margin="0, 10, 0, 0"
                         Text="{Binding SelectedQuestion.MauvaisesReponses[0].Contenu}"></TextBox>
            <TextBox Height="30" VerticalContentAlignment="Center" Margin="0, 10, 0, 0"
                        Text="{Binding SelectedQuestion.MauvaisesReponses[1].Contenu}"></TextBox>
            <TextBox Height="30" VerticalContentAlignment="Center" Margin="0, 10, 0, 0"
                         Text="{Binding SelectedQuestion.MauvaisesReponses[2].Contenu}"></TextBox>
            <TextBox Height="30" VerticalContentAlignment="Center" Margin="0, 10, 0, 0"
                        Text="{Binding SelectedQuestion.BonneReponse.Contenu, UpdateSourceTrigger=PropertyChanged}" ></TextBox>
                <Label Content="Bonne réponse" Height="30"></Label>
                <TextBox Height="30" VerticalContentAlignment="Center"
                    Text="{Binding SelectedQuestion.BonneReponse.Contenu, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1">
            <Button Width="120" Height="40" Margin="0,0,20,0" Command="{Binding AddQuestionCommand}">
                    <TextBlock Text="Ajouter question"></TextBlock>
            </Button>
            <Button Width="120" Height="40" Margin="0,0,20,0" Command="{Binding UpdateQuestionCommand}"
                    CommandParameter="{Binding SelectedQuestion.Id}">
                    <TextBlock Text="Modifier question"></TextBlock>
            </Button>
            <Button Width="120" Height="40" Command="{Binding RemoveQuestionCommand}"
                        CommandParameter="{Binding SelectedQuestion.Id}">
                    <TextBlock Text="Supprimer question"></TextBlock>
            </Button>
            </StackPanel>
        </Grid>
</Page>
