<Page x:Class="Questionnaire.Views.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Questionnaire.Views"
      xmlns:viewmodels="clr-namespace:Questionnaire.ViewModels"
      xmlns:models="clr-namespace:Questionnaire.Core.Models;assembly=Questionnaire.Core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=viewmodels:Page2ViewModel}"
      Title="Page2">

    <Page.Resources>
        <DataTemplate x:Key="QuestionTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Grid.Column="0" >
                    <Label Content="Questions"></Label>
                    <StackPanel Height="60" VerticalAlignment="Top" Orientation="Horizontal">
                        <TextBlock Text="{Binding Contenu}"></TextBlock>
                        <TextBlock Text="{Binding ReponseCorrecte}"></TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox 
            x:Name="QuestionListBox"
            ItemsSource="{Binding Questions}"
            SelectedItem="{Binding SelectedQuestion}"
            ItemTemplate="{Binding QuestionTemplate}"/>

        <StackPanel Grid.Column="1">
                <Label Content="Question" Height="30"></Label>
                <TextBox Height="30" VerticalContentAlignment="Center"
                         Text="Quelle est la capitale de la france ?"></TextBox>
                <Label Content="Réponses possibles" Height="30"></Label>
                <TextBox Height="30" VerticalContentAlignment="Center"
                         Text="Montpellier"></TextBox>
                <TextBox Height="30" VerticalContentAlignment="Center"
                        Text="Lyon"></TextBox>
                <TextBox Height="30" VerticalContentAlignment="Center"
                         Text="Nantes"></TextBox>
                <TextBox Height="30" VerticalContentAlignment="Center"
                        Text="Paris"></TextBox>
                <Label Content="Bonne réponse" Height="30"></Label>
                <TextBox Height="30" VerticalContentAlignment="Center"
                    Text="Paris"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1">
            <Button Width="120" Height="40" Margin="0,0,20,0" Command="{Binding AddQuestionCommand}">
                    <TextBlock Text="Ajouter question"></TextBlock>
                </Button>
                <Button Width="120" Height="40" Command="{Binding RemoveQuestionCommand}" >
                    <TextBlock Text="Supprimer question"></TextBlock>
                </Button>
            </StackPanel>
        </Grid>
</Page>
