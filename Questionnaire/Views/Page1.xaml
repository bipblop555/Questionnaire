<Page x:Class="Questionnaire.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:local="clr-namespace:Questionnaire.Views"
      xmlns:viewmodels="clr-namespace:Questionnaire.ViewModels" 
      xmlns:converters="clr-namespace:Questionnaire.Converters"
      xmlns:behaviors="clr-namespace:Questionnaire.Behaviour"
      d:DataContext="{d:DesignInstance Type=viewmodels:QuestionnaireViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Page.Resources>
        <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Questionnaire Manager" 
                   Margin="10"
                   FontSize="16"
                   FontWeight="Bold"/>

        <!-- List with Remove buttons -->
        <ListBox Grid.Row="1" 
                 Margin="10"
                 SelectedItem="{Binding SelectedQuestionnaire}"
                 ItemsSource="{Binding Questionnaires}"
                 BorderThickness="0"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Title}" 
                                   Grid.Column="0"
                                   Margin="5" 
                                   VerticalAlignment="Center"
                                   />
                        <Button Content="Ouvrir" 
                                Grid.Column="1"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding DataContext.OpenQuestionnaireCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                CommandParameter="{Binding Id}"/>
                        <Button Content="Supprimer"
                                Style="{StaticResource DangerButtonStyle}"
                                Grid.Column="2"
                                Command="{Binding DataContext.DeleteQuestionnaireCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                CommandParameter="{Binding .}"
                                Tag="{Binding Id}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!-- TextBox Questionnaire Title -->
        <TextBox Grid.Row="2"
                 Margin="10,5"
                 Text="{Binding NewQuestionnaireTitle, UpdateSourceTrigger=PropertyChanged}" UndoLimit="97"
                 >
            <i:Interaction.Behaviors>
                <behaviors:RequiredBehavior />
            </i:Interaction.Behaviors>
        </TextBox>
        <!-- Add Button -->
        <Button Grid.Row="3"
                Style="{StaticResource SuccessButtonStyle}"
                x:Name="AddButton" 
                Content="Ajouter nouveau questionnaire" 
                Margin="10"
                Command="{Binding NewQuestionnaireCommand}" 
                Cursor="Hand"
                IsEnabled="{Binding NewQuestionnaireTitle, Converter={StaticResource StringToBoolConverter}}"/>
    </Grid>
</Page>